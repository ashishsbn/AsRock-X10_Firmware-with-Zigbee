config dnsmasq
        option domainneeded '1'
        option boguspriv '1'
        option filterwin2k '0'
        option localise_queries '1'
        option rebind_protection '1'
        option rebind_localhost '1'
        option local '/lan/'
        option domain 'ASRock'
        option expandhosts '1'
        option nonegcache '0'
        option authoritative '1'
        option readethers '1'
        option leasefile '/tmp/dhcp.leases'
        option resolvfile '/tmp/resolv.conf.auto'
        option localservice '1'

config dhcp 'lan2'
        option interface 'lan2'
        option force '1'
        option start '1'
        option limit '254'
        option leasetime '2880m'
        option ignore '0'
        option autoset '1'
        option startaddr '192.168.1.100'
        option endaddr '192.168.1.254'
        option dhcpv6 'disabled'
        option ra 'server'
        option startv6 '4096'
        option limitv6 '4096'
        option ra_maxinterval '6'
